<Window x:Class="ControlCalorias.AddDia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Añadir Día" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DatePicker Grid.ColumnSpan="2" Name="DatePickerDia"/>
        <Button Grid.Column="0" Grid.Row="1" Click="ButtonConfirmDia_Click" Margin="10" Content="Confirmar" IsDefault="True"/>
        <Button Grid.Column="1" Grid.Row="1" Click="ButtonCancelDia_Click"  Margin="10" Content="Cancelar" IsCancel="True"/>
    </Grid>
</Window>
